<div class="container">
<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12 mt-5">
          <div class="login bg-light " id="contentArea">
              <h1 class="display-4">Contact US</h1>

            

              <form method="POST" id="registerForm" novalidate>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-6 ">
                      <input class="form-control" type="text" name="firstName" id="firstName" placeholder="First Name" required>
                    </div>
                    <div class="col-md-6">
                      <input class="form-control" type="text" name="lastName" id="lastName" placeholder="Last Name" required>
                    </div>
                  </div>
                </div>
                <div class="form-group mt-3">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="email" class="form-control" id="email" name="email" required
                      value="" placeholder="Email Address">
                    </div>
                  </div>
                </div>

				<div class="form-group mt-3">
					<div class="row">
					  <div class="col-md-12">
						<input type="number" class="form-control" id="phone" name="phone" required
						value="" placeholder="Phone Number">
					  </div>
					</div>
				  </div>

				  <div class="form-group mt-3">
					<div class="row">
					  <div class="col-md-12">
						  <label>Description</label>
						  <textarea id="description" class="form-control" placeholder="Enter Description" name="description" rows="4" >
							
						  </textarea>
					  </div>
					</div>
				  </div>
                 
                                                    
                <div class="text-end mt-3">
                  <button id="submitButton" type="submit" class="btn btn-primary">Submit</button>
                  <button id="cancelButton" type="reset" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Reset</button>
                </div>
              </form>
             
              
          </div>
         
    </div>
</div>
</div>