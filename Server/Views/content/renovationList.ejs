<div class="container login mt-3 bg-light">
  <h2 class="text-dark">Maintenance Requests</h2>
  <table class="table login bg-light ">
    <thead>
      <tr>
        <th scope="col">Id#</th>
        <th scope="col">Unit#</th>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">Status</th>
        <th scope="col">Worker</th>
        <th scope="col">Date</th>
        <th scope="Assign"></th>
      </tr>
    </thead>
    <tbody>
      <% for(let count=0; count<list.length;count++) {%>
        <tr>
          <th scope="row">
            <%=count+1 %>
          </th>

          <td>
            <%=list[count].unit %>
          </td>
          <td>
            <%=list[count].firstName %>
          </td>
          <td>
            <%=list[count].type %>
          </td>
          <td>
            <%=list[count].status %>
          </td>
          <td>
            <%=list[count].workerId %>
          </td>
          <td>
            <%=list[count].date %>
          </td>

          <% if(displayName) { %>
            <td><a href="/workorder/create/<%=list[count]._id%>"><i class="fas fa-plus"> Work Order</i></a></td>
            <% } %>
        </tr>
        <% }%>

    </tbody>

  </table>
</div>