<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12 mt-5">
      <div class="login bg-light" id="contentArea">
        <h1 class="display-4">Create an Unit</h1>

        <form method="POST" class="row">
          <div class="row">
            <div class="col-md-12 ">
              <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
              <lottie-player src="https://assets6.lottiefiles.com/private_files/lf30_MK1ZRw.json"
                background="transparent" speed="1" style="width: 300px; height: 300px;" loop autoplay></lottie-player>
            </div>
          </div>
          <div class="form-group mt-3">
            <div class="row">
              <div class="col-md-12">
                <input type="text" class="form-control" id="unit#" name="unit" value="<%=item.unitNumber%>" required
                  placeholder="Unit #" />
              </div>
            </div>
          </div>


          <div class="form-group mt-2">
            <div class="row">
              <div class="col-md-12">
                <select class="form-select" aria-label="Worker" name="type" required>
                  <option selected value="">Select a type</option>
                  <option value="Owned">Owned</option>
                  <option value="Rental">Rental</option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-group mt-3">
            <div class="row">
              <div class="col-md-12">
                <input type="text" class="form-control" id="unit#" name="address" value="<%=item.address%>" required
                  placeholder="Address" />
              </div>
            </div>
          </div>



          <div class="mb-3 mt-2">
            <textarea class="form-control" id="validationTextarea" name="description" value=""
              placeholder="Brief Description" required><%=item.description%></textarea>
          </div>

          <div class="text-end mt-3">
            <button id="submitButton" type="submit" class="btn btn-primary">
              Submit
            </button>
            <button id="cancelButton" type="reset" class="btn btn-warning">
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>