<div class="p-2 mt-2 mb-4 bg-light rounded-3 zoom">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">Condo Management</h1>
    <p class="col-md-8 fs-4">An easy and convenient way to book Amenities</p>
    <button class="btn btn-primary btn-lg" type="button">Explorer</button>
  </div>
</div>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <div class="col">
        <div class="card shadow-sm zoom">
          <img class="card-img-top" src="/Assets/images/elevator.jpeg" width="100%" height="225px" alt="Card image cap">

          <div class="card-body">
            <p class="card-text">Elevator</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="/booking/elevator"> <button type="button" class="btn btn-sm btn-outline-secondary">
                    Book Now</button></a>
              </div>
              <small class="text-muted">No fees</small>
            </div>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card shadow-sm zoom">
          <img class="card-img-top" src="/Assets/images/swimming_pool.jpeg" width="100%" height="225px"
            alt="Card image cap">

          <div class="card-body">
            <p class="card-text">Swimming Pool</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="/booking/swimmingpool"> <button type="button" class="btn btn-sm btn-outline-secondary">
                    Book Now</button></a>
              </div>
              <small class="text-muted">No fees</small>
            </div>
          </div>
        </div>
      </div>


      <div class="col">
        <div class="card shadow-sm zoom">
          <img class="card-img-top" src="/Assets/images/gym.jpeg" width="100%" height="225px" alt="Card image cap">

          <div class="card-body">
            <p class="card-text">Cardio Room</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary">Book Now</button>
              </div>
              <small class="text-muted">No fees</small>
            </div>
          </div>
        </div>
      </div>


      <div class="col">
        <div class="card shadow-sm zoom">
          <img class="card-img-top" src="/Assets/images/party_hall.jpeg" width="100%" height="225px"
            alt="Card image cap">

          <div class="card-body">
            <p class="card-text">Party Room</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="/booking/partyRoom"> <button type="button" class="btn btn-sm btn-outline-secondary">
                    Book Now</button></a>
              </div>
              <small class="text-muted">No fees</small>
            </div>
          </div>
        </div>
      </div>


      <div class="col">
        <div class="card shadow-sm zoom">
          <img class="card-img-top" src="/Assets/images/pool_table.jpeg" width="100%" height="225px"
            alt="Card image cap">

          <div class="card-body">
            <p class="card-text">Pool Table</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="/booking/pooltable"> <button type="button" class="btn btn-sm btn-outline-secondary">
                    Book Now</button></a>
              </div>
              <small class="text-muted">No Fees</small>
            </div>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card shadow-sm zoom">
          <img class="card-img-top" src="/Assets/images/guest_room.jpeg" width="100%" height="225px"
            alt="Card image cap">

          <div class="card-body">
            <p class="card-text">Guest Room 1</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="/booking/room1"> <button type="button" class="btn btn-sm btn-outline-secondary">
                    Book Now</button></a>
              </div>
              <small class="text-muted">$60 Daily</small>
            </div>
          </div>
        </div>
      </div>


      <div class="col">
        <div class="card shadow-sm zoom">
          <img class="card-img-top" src="/Assets/images/guest_room.jpeg" width="100%" height="225px"
            alt="Card image cap">

          <div class="card-body">
            <p class="card-text">Guest Room 2</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="/booking/room2"> <button type="button" class="btn btn-sm btn-outline-secondary">
                    Book Now</button></a>
              </div>
              <small class="text-muted">$80 Daily</small>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>




<div class="row mb-10 mt-3">
  <div class="col-md-6">
    <div class="card shadow-lg p-3 bg-white rounded d-flex justify-content-center flex-column ">
      <div class="card-body"></div>
      <h5 class="card-title">Recent Booking</h5>
      <div class="list-group">
        <% if(items.length==0){ %>
           <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32"
                  class="rounded-circle flex-shrink-0">
                <div class="d-flex gap-2 w-100 justify-content-between">
                  <div>
                    <h6 class="mb-0">
                     No Booking.
                    </h6>
                    <p class="mb-0 opacity-75">
                    
                    </p>

                  </div>
                  <small class="opacity-50 text-nowrap">
                   
                  </small>
                </div>
              </a>
          <% } %>

            <% for (let count=0; count < items.length; count++) { %>

              <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32"
                  class="rounded-circle flex-shrink-0">
                <div class="d-flex gap-2 w-100 justify-content-between">
                  <div>
                    <h6 class="mb-0">
                      <%= items[count].type%>
                    </h6>
                    <p class="mb-0 opacity-75">
                      <%= items[count].date%>
                    </p>

                  </div>
                  <small class="opacity-50 text-nowrap">
                    <%= items[count].status%>
                  </small>
                </div>
              </a>

              <% } %>



      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card shadow-lg p-3 bg-white rounded d-flex justify-content-center flex-column ">
      <div class="card-body"></div>
      <h5 class="card-title">Recent Announcements</h5>
      <div class="list-group">
        <% for (let count=0; count < announcementsList.length; count++) { %>

          <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
            <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32"
              class="rounded-circle flex-shrink-0">
            <div class="d-flex gap-2 w-100 justify-content-between">
              <div>
                <h6 class="mb-0">
                  <%= announcementsList[count].title%>
                </h6>
                <p class="mb-0 opacity-75">
                  <%= announcementsList[count].content%>
                </p>

              </div>
              <small class="opacity-50 text-nowrap">
                <%= announcementsList[count].date%>
              </small>
            </div>
          </a>

          <% } %>

      </div>
    </div>
  </div>
</div>

<br>
<br><br>

</div>