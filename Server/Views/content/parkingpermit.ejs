<div class="container">
  <div class="row mb-5">
    <div class="offset-md-3 col-md-6 col-sm-12 mt-5">
      <div class="login bg-light " id="contentArea">
       

        <% if(messages.length> 0) { %>
          <div id="messageArea" class="alert alert-danger">
            <%= messages %>
          </div>
          <% } %>

            <form method="POST" id="registerForm" novalidate>
             
              <div class="form-group">
              
                <div class="row">
                  <p class="lead"><i class="fas fa-car text-center"></i> Parking Permit</p>
                  <div class="col-md-4 ">
                    <input class="form-control" type="text" name="condounit" id="unit" placeholder="Condo Unit Number"
                      required>
                  </div>
                  <div class="col-md-4 ">
                    <input class="form-control" type="text" name="FirstName" id="firstName" placeholder="First Name"
                      required>
                  </div>
                  <div class="col-md-4">
                    <input class="form-control" type="text" name="LastName" id="lastName" placeholder="Last Name"
                      required>
                  </div>
                  <div class="col-md-4  mt-3 ">
                    <input class="form-control" type="date" name="date" id="date" placeholder="From Time"
                      required>
                  </div>
                   <div class="col-md-4  mt-3 ">
                    <input class="form-control" type="time" name="fromtime" id="fromtime" placeholder="From Time"
                      required>
                  </div>
                  <div class="col-md-4  mt-3">
                    <input class="form-control" type="time" name="totime" id="totime" placeholder="To Time"
                      required>
                  </div>
                </div>
              </div>
              <div class="form-group mt-3">
                <div class="row">
                  <div class="col-md-12">
                    <input type="email" class="form-control" id="emailAddress" name="email" required value=""
                      placeholder="Email Address">
                  </div>
                </div>
              </div>

              <div class="form-group mt-3">
                <div class="row">
                  <div class="col-md-12">
                    <input type="number" class="form-control" id="phone" name="phone" required value=""
                      placeholder="Phone">
                  </div>
                </div>
              </div>

              
              <div class="form-group  mt-3">
                <div class="row">
<p class="lead"><i class="fas fa-home text-center"></i> Your address</p>
                  <div class="col-md-6 ">
                    <input class="form-control" type="text" name="unit" id="unit" placeholder="Unit" required>
                  </div>
                  <div class="col-md-6">
                    <input class="form-control" type="text" name="street" id="street" placeholder="Street" required>
                  </div>

                </div>
              </div>
              <div class="form-group mt-3">
                <div class="row">
                  <div class="col-md-4 ">
                    <input class="form-control" type="city" name="city" id="unit" placeholder="City" required>
                  </div>
                  <div class="col-md-4">
                    <select class="form-select" aria-label="Default select example" name="province" required>
                      <option selected value="">Province</option>
                      <option value="AB">Alberta</option>
                      <option value="BC">British Columbia</option>
                      <option value="MB">Manitoba</option>
                      <option value="NB">New Brunswick</option>
                      <option value="NL">Newfoundland and Labrador</option>
                      <option value="NS">Nova Scotia</option>
                      <option value="NT">Northwest Territories</option>
                      <option value="NU">Nunavut</option>
                      <option value="ON">Ontario</option>
                      <option value="PE">Prince Edward Island</option>
                      <option value="QC">Quebec</option>
                      <option value="SK">Saskatchewan</option>
                      <option value="YT">Yukon</option>
                    </select>

                  </div>
                  <div class="col-md-4 ">
                    <input class="form-control" type="zipcode" name="zipcode" id="zipcode" placeholder="Zipcode"
                      required>
                  </div>
                </div>
              </div>

             
             

              <div class="text-end mt-3">
                <button id="submitButton" type="submit" class="btn btn-primary">Submit</button>
                <button id="cancelButton" type="reset" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i>
                  Cancel</button>
              </div>
            </form>

      </div>

    </div>
  </div>
</div>