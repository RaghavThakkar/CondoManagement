<div style='color:white; margin:  0 0 70px 0;'>
    <h1>Announcement</h1>
    <% if(displayName) { %>
    <a href='/announcement/add'><button type="button" class="btn btn-primary" style="width: 150px;margin: 20px 0px;"><i class="fas fa-plus" style="margin:5px;"></i>New Memo</button></a>
    <%}%>
    <div class="list-group">
      <% let a =1%>
        <% for(let i=announcement.length-1; i>=0; i--){%> 
          <div class="list-group-item list-group-item-action flex-column align-items-start ">
          <div class="d-flex w-100 justify-content-between list-group-item-primary">
            <h5 class="mb-1"><%= announcement[i].title%></h5>
            <small><%= announcement[i].date.toLocaleString()%></small>
          </div>
            <p class="mb-0">
              <%= announcement[i].content%>
              <div class="d-flex flex-row-reverse">
                <div class ="p-2">
                  <a href="/announcement/edit/<%= announcement[i]._id%>"><i class="fas fa-edit"></i></a>  
                </div>
                <div class="p-2">
                  <a href="/announcement/delete/<%= announcement[i]._id%>"><i class="fas fa-trash"></i></a>    
                </div>
              </div>  
                                            
            </p>
            
              
               
          </div>
          
          <%}%> 
    </div>

    
        
</div>